{
  "name": "pipam",
  "version": "1.2.0",
  "description": "Pipam - The pluginable interface for package managers",
  "main": "index.js",
  "productName": "Pipam",
  "scripts": {
    "start": "./node_modules/.bin/electron ./app/index.js",
    "build": "node scripts/build.js",
    "appDeps": "cd app && npm i && cd ..",
    "dist": "node scripts/dist.js",
    "run": "npm run build && npm run appDeps && npm start",
    "test": "nyc --reporter=html --reporter=lcov --reporter=text ava",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pipam/pipam.git"
  },
  "author": {
    "name": "facekapow",
    "email": "facekapow@outlook.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pipam/pipam/issues"
  },
  "homepage": "https://github.com/pipam/pipam#readme",
  "devDependencies": {
    "@types/chalk": "0.4.31",
    "@types/mustache": "4.1.2",
    "@types/node": "16.11.26",
    "@types/node-fetch": "3.0.2",
    "@types/semver": "7.3.9",
    "@types/tar": "6.1.1",
    "@types/tmp": "0.2.3",
    "@types/whatwg-fetch": "0.0.33",
    "ava": "4.0.1",
    "babel-core": "6.26.3",
    "babel-preset-latest": "6.24.1",
    "coveralls": "3.1.1",
    "deep-assign": "2.0.0",
    "directory-tree": "3.0.1",
    "electron": "17.1.0",
    "electron-builder": "22.14.5",
    "gauge": "4.0.0",
    "less": "4.1.2",
    "marked": "4.0.10",
    "mockery": "2.1.0",
    "nyc": "15.1.0",
    "then-utils": "1.6.0",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "command-exists": "^1.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "node-fetch": "^3.0.0",
    "mustache": "^4.0.0",   
    "getos": "^3.0.0",
    "npm": "^8.0.0",
    "semver": "^7.0.0",
    "tar": "^6.0.0",
    "then-utils": "^1.4.0",
    "tmp": "0.2.1",
    "chalk": "^5.0.0"
  },
  "build": {
    "appId": "com.pipam.pipam",
    "copyright": "Copyright Â© 2016 Pipam Author(s) (https://github.com/orgs/pipam/people)",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "iconUrl": "https://github.com/pipam/pipam/blob/master/build/icon.ico?raw=true",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "ava": {
    "serial": true
  },
  "nyc": {
    "sourceMap": true,
    "instrument": true
  }
}
